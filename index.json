{
  "$schema": "http://json.schemastore.org/prettierrc",
  "singleQuote": true,
  "trailingComma": "none",
  "arrowParens": "avoid",
  "semi": false,
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "jsxBracketSameLine": false,
  "htmlWhitespaceSensitivity": "css",
  "useTabs": false,
  "overrides": [
    {
      "files": ["*.js", "*.json", "*.jsonp", "*.jsonc", "*.yaml", "*.yml"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "tabWidth": 3,
        "useTabs": true
      }
    }
  ]
}
